{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "NodeNext",
		"target": "ESNext",
		"allowJs": true,
		"noImplicitAny": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"moduleResolution": "nodenext",
		"importHelpers": true,
		"isolatedModules": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"]
	},
	"include": ["**/*.ts"]
}
